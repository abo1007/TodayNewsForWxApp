/* pages/info/info.wxss */
page{
	background-color:#000;
	color:#fff;
}

.app{
	display: flex;
	flex-wrap: wrap;
	justify-content: center;
}
.top{
	width:96%;
	border-bottom:1px solid #cccccc;
	padding:20rpx 0;
}
.top text{
	color:#fff;
	font-size:1.5rem;
}
.cen{
	width:96%;
	display:flex;
	justify-content:space-between;
}
.cen text{
	font-size:0.8rem;
	color:#ccc;
}
.bot{
	width:92%;
	text-indent:2rem;
	margin:20rpx 0;
	font-size:0.8rem;
	line-height:1.3rem;
}
.action{
	width:90%;
	margin:15rpx 0;
	display: flex;
	justify-content: center;
}
.action button{
	width:50%;
	background-color:#696969;
	color:#eee;
	font-size:0.9rem;
	font-weight:bold;
	box-shadow:0px 0px 10px #ccc;
}
.action button:first-child{
	margin-right:50rpx;
}

